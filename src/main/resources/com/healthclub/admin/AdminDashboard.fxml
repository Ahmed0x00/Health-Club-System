<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="com.healthclub.controller.admin.AdminController"
      xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_CENTER">
    <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Dashboard" onAction="#loadDashboardView" />
        <Button text="Manage Coaches" onAction="#loadManageCoachesView" />
        <Button text="Manage Members" onAction="#loadManageMembersView" />
        <Button text="Manage Billing" onAction="#loadManageBillingView" />
        <Button text="Generate Reports" onAction="#loadGenerateReportsView" />
        <Button text="Notifications" onAction="#loadNotificationsView" />
        <Button text="Profile" onAction="#loadProfileView" />
    </HBox>
    <StackPane fx:id="mainContent" minHeight="400" style="-fx-border-color: gray;">
        <Label text="Welcome to the Admin Dashboard" />
    </StackPane>
</VBox>